{
	"$schema": "https://raw.githubusercontent.com/zheka2304/innercore-mod-toolchain/develop/toolchain/schemas/make.schema.json",
	"resources": [
		{
			"path": "assets",
			"type": "resource_directory"
		},
		{
			"path": "assets/gui",
			"type": "gui"
		},
        {
            "path": "assets/font",
            "type": "font"
        }
	],
	"project": {
		"composite": false
	},
	"sources": [
		{
			"source": "code",
			"target": "main.js",
			"type": "main",
			"language": "typescript"
		},
		{
			"source": "launcher.js",
			"type": "launcher",
			"language": "javascript"
		},
		{
			"source": "library/*",
			"type": "library",
			"language": "typescript"
		}
	],
	"additional": [
		{
			"source": "config.json",
			"targetDir": "."
		},
		{
			"source": "config.info.json",
			"targetDir": "."
		}
	],
    "compile": [
        {
            "type": "java",
            "source": "java"
        }
    ],
	"info": {
		"name": "Fireflies",
		"author": "ArtemKot",
		"version": "2025",
		"description": "Мод-библиотека, добавляющая возможности для более широкого создания модификаций объектно-ориентированным методом с использованием TypeScript. Добавляет классы под блоки, предметы, команды, анимации уведомлений, тайл энтити и не только. Подробнее читайте в документации на сайте проекта.",
		"icon": "mod_icon.png",
        "javaBoot": "com.artemkot4.fireflies.Fireflies"
	},
	"api": "CoreEngine",
	"linkNative": [
		"minecraftpe",
		"innercore",
		"nativejs"
	],
	"excludeFromRelease": []
}




















